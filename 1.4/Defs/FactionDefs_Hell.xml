<Defs>

  <FactionDef ParentName="PirateBandBase"> <!--TribeBase-->
    <defName>BS_Hell</defName>
    <label>The Infernal Realm</label>
    <fixedName>Tyrany of Hell</fixedName>
    <leaderTitle>Lord</leaderTitle>
    <description>DESCRIPTION PENDING</description>
    <techLevel>Medieval</techLevel>
    <pawnSingular>demon</pawnSingular>
    <pawnsPlural>demons</pawnsPlural>
    <canStageAttacks>true</canStageAttacks> 
    <factionIconPath>FactionIcons/BS_Brimstone</factionIconPath>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
    <configurationListOrderPriority>15</configurationListOrderPriority>
    <listOrderPriority>45</listOrderPriority>
    <autoFlee>false</autoFlee>
    <!-- <allowedCultures Inherit="False"><li>Astropolitan</li></allowedCultures> -->
    
     <!-- <backstoryFilters>
      <li>
        <categories>
          <li>BS_Hell</li>
        </categories>
      </li>
    </backstoryFilters> -->


    <fixedLeaderKinds>
      <li>VU_DemonCommander</li> <!--Replace with something more impressive.-->
    </fixedLeaderKinds>
  
    <disallowedRaidStrategies>
      <li>ImmediateAttackSappers</li>
      <li>ImmediateAttackBreaching</li>
      <li>ImmediateAttackBreachingSmart</li>
      <li>Siege</li>
    </disallowedRaidStrategies>
    
  
    <allowedMemes Inherit="False">
      <li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Cannibal</li>
    </allowedMemes>
    <requiredMemes Inherit="False">
      <li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
    </requiredMemes>
    <!-- <disallowedMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">PainIsVirtue</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">FleshPurity</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Guilty</li>
    </disallowedMemes> -->
    <disallowedPrecepts>
    </disallowedPrecepts>
  
    <colorSpectrum>
      <li>(0.65, 0.1, 0.1)</li>
      <!-- <li>(0.61, 0.45, 0.32)</li> -->
    </colorSpectrum>
    <!-- <permanentEnemy>true</permanentEnemy> -->
    <naturalEnemy>true</naturalEnemy>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <startingCountAtWorldCreation>1</startingCountAtWorldCreation>
    <canSiege>false</canSiege>
    <xenotypeSet Inherit="False">
      <xenotypeChances>
        <VU_Imp>0.50</VU_Imp>
        <VU_Hellguard>0.30</VU_Hellguard>
        <VU_Succubus MayRequire="RedMattis.Undead">0.20</VU_Succubus>
        <VU_Gatekeeper>0.20</VU_Gatekeeper>
      </xenotypeChances>
      <warnIfTotalAbove1>false</warnIfTotalAbove1>
    </xenotypeSet>
    
    <maxPawnCostPerTotalPointsCurve Inherit="False">
      <points>
        <li>(500, 150)</li> <!-- Can always use relatively strong pawns, because giants doesn't really have weak ones -->
        <li>(2000, 250)</li>
        <li>(2001, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    
    <pawnGroupMakers Inherit="False">
      <li>
        <!-- Imp Horde -->
        <kindDef>Combat</kindDef>
        <commonality>20</commonality>
        <options>
          <VU_ImpFighter>10</VU_ImpFighter>
          <VU_DemonWarrior>1</VU_DemonWarrior>
          <VU_DemonCommander_Suc MayRequire="RedMattis.Undead">1</VU_DemonCommander_Suc>
        </options>
      </li>
  
      <li>
        <!-- Demon Horde -->
        <kindDef>Combat</kindDef>
        <commonality>20</commonality>
        <options>
          <VU_ImpFighter>5</VU_ImpFighter>
          <VU_DemonWarrior>15</VU_DemonWarrior>
          <VU_DemonBrute>5</VU_DemonBrute>
          <VU_DemonCommander>2</VU_DemonCommander>
          <VU_DemonCommander_Suc MayRequire="RedMattis.Undead">3</VU_DemonCommander_Suc>
        </options>
      </li>
  
      <li>
        <!-- Demon & Undead Horde -->
        <kindDef>Combat</kindDef>
        <commonality>20</commonality>
        <options>
          <VU_ImpFighter>5</VU_ImpFighter>
          <VU_DemonWarrior>15</VU_DemonWarrior>
          <VU_DemonBrute>5</VU_DemonBrute>
          <VU_DemonCommander>2</VU_DemonCommander>
          <VU_DemonCommander_Suc MayRequire="RedMattis.Undead">3</VU_DemonCommander_Suc>
          <VU_RoamingFootman MayRequire="RedMattis.Undead">2</VU_RoamingFootman>
        </options>
      </li>
  
      <li>
        <!-- Peaceful -->
        <kindDef>Peaceful</kindDef>
        <options>
          <VU_ImpFighter>5</VU_ImpFighter>
          <VU_DemonWarrior>15</VU_DemonWarrior>
          <VU_DemonBrute>5</VU_DemonBrute>
          <VU_DemonCommander>2</VU_DemonCommander>
          <VU_DemonCommander_Suc>3</VU_DemonCommander_Suc>
        </options>
      </li>
      <!-- In case a mod spawns them...-->
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <VU_DemonCommander_Suc MayRequire="RedMattis.Undead">10</VU_DemonCommander_Suc>
          <VU_DemonCommander>0.001</VU_DemonCommander>
        </traders>
        <carriers>
          <Muffalo>6</Muffalo>
          <Dromedary>5</Dromedary>
          <Alpaca>2.5</Alpaca>
          <Elephant>2</Elephant>
        </carriers>
        <guards>
          <VU_ImpFighter>5</VU_ImpFighter>
          <VU_DemonWarrior>15</VU_DemonWarrior>
          <VU_DemonBrute>5</VU_DemonBrute>
          <VU_DemonCommander>2</VU_DemonCommander>
          <VU_DemonCommander_Suc MayRequire="RedMattis.Undead">3</VU_DemonCommander_Suc>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <VU_ImpFighter>5</VU_ImpFighter>
          <VU_DemonWarrior>15</VU_DemonWarrior>
          <VU_DemonBrute>5</VU_DemonBrute>
          <VU_DemonCommander>2</VU_DemonCommander>
          <VU_DemonCommander_Suc MayRequire="RedMattis.Undead">3</VU_DemonCommander_Suc>
        </options>
      </li>
      <li MayRequire="Ludeon.RimWorld.Ideology">
        <kindDef>Miners</kindDef>
        <commonality>1</commonality>
        <options>
          <Miner>1</Miner>
        </options>
      </li>
      <li MayRequire="Ludeon.RimWorld.Ideology">
        <kindDef>Hunters</kindDef>
        <commonality>1</commonality>
        <options>
          <Hunter>1</Hunter>
        </options>
      </li>
      <li MayRequire="Ludeon.RimWorld.Ideology">
        <kindDef>Loggers</kindDef>
        <commonality>1</commonality>
        <options>
          <Logger>1</Logger>
        </options>
      </li>
      <li MayRequire="Ludeon.RimWorld.Ideology">
        <kindDef>Farmers</kindDef>
        <commonality>1</commonality>
        <options>
          <Farmer>1</Farmer>
        </options>
      </li>
    </pawnGroupMakers>
    <modExtensions>
      <li Class="BigAndSmall.Factions">
        <canUseDropPods>false</canUseDropPods>
      </li>
    </modExtensions>
  </FactionDef>

</Defs>
